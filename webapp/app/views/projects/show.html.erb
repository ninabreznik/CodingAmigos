<div class="body_leads_show">
  <a class="back_to_main_page_button" href="/"></a>
    <div class="lead_show">
      <div class="lead_show_title">
        <%= link_to "#{@project.title}", user_path(id: User.all.where(email: @project.email).first.id)%>
      </div>
      <div class="lead_show_body">
        <div class="lead_show_items_short">
          <div class="lead_show_item">
            <div class="lead_show_subtitle"></div>
            <%=link_to "#{image_tag @project.picture.url(:full)}".html_safe, user_path(@project.user) %><br>
            <br>
            <% if @project.category.present? %>
              <div class="lead_show_subtitle">Category:</div>
              <br>
              <%= @project.category %> <br><br>
            <% end %>
            <% if @project.description.present? %>
              <div class="lead_show_subtitle">Description:</div>
              <br>
              <%= @project.description %> <br><br>
            <% end %>
            <% if @project.live_demo.present? %>
              <div class="lead_show_subtitle">Live demo:</div>
              <br>
              <% if @project.live_demo.include?("https") %>
               <%= link_to "#{@project.live_demo}", "https://#{@project.live_demo.split('https://').last}" %>
              <% else %>
               <%= link_to "#{@project.live_demo}", "http://#{@project.live_demo.split('http://').last}" %>
              <% end %>
              <br><br>
            <% end %>
            <% if @project.repository.present? %>
              <div class="lead_show_subtitle">Repository:</div>
              <br>
              <% if @project.repository.include?("https") %>
               <%= link_to "#{@project.repository}", "https://#{@project.repository.split('https://').last}" %>
              <% else %>
               <%= link_to "#{@project.repository}", "http://#{@project.repository.split('http://').last}" %>
              <% end %>
              <br><br>
            <% end %>
          </div>
            <div class="lead_subtitle">
              <%=link_to "#{image_tag @project.user.picture.url(:thumb), :width => "25"} #{@project.user.first_name}".html_safe, user_path(@project.user) %></div><br><br>
        <% if current_user.present? %>
          <% if @project.email == current_user.email %>
            <div class="project_show_send_message">
              <%= link_to "#{I18n.t'project-show.edit'}", edit_project_url(@project) %>
            </div>
          <% end %>
        <% else %>
          <div class="project_show_send_message">
            <a href="http://www.gitter.im/#{@project.user.first_name}">Contact me</a>
          </div>
        <% end %>
          </div>
     </div>
  </div>
</div>
